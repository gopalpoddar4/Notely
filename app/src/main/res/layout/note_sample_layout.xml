<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sampleLayout"
    app:cardBackgroundColor="@color/colorDefaultNoteColor"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/rcvLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@color/colorDefaultNoteColor"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rcvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="My Note"
                        android:textColor="@color/colorTextColor"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/rcvIsPinned"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/notpin"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rcvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:text="5 jan 2025"
                    android:textColor="@color/colorTextColor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/rcvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:maxHeight="62dp"
                    android:text="This is a sample note "
                    android:textColor="@color/colorTextColor"
                    android:textSize="18dp" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lockOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/colorBlur">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blur_bg"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lock"
                    app:tint="@color/colorTextColor"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </FrameLayout>


</androidx.cardview.widget.CardView>