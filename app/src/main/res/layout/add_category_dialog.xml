<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pin_delete_layout"
    android:background="@drawable/setting_bg"
    android:windowSoftInputMode="adjustPan">

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Category"
            android:textColor="@color/colorTextColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/newCategoryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:maxLength="15"
            android:singleLine="true"
            android:hint="Add category"
            android:drawableTint="@color/colorTextColor"
            android:drawableLeft="@drawable/category_24"
            android:drawablePadding="5dp"
            android:background="@drawable/edit_text_bg"/>

        <Button
            android:id="@+id/addCategory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/format_bg"
            android:text="ADD CATEGORY"
            android:textColor="@color/colorTextColor" />

    </LinearLayout>
</LinearLayout>